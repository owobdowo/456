<!DOCTyPE html>
<html>
    <head>
        <meta charset="utf-8">
        <script>
            function printStar(n){
                let m = parseInt(n);
                if(isNaN(m)){
                    alert("입력 오류입니다")
                }
                else {
                    for(let i=1; i<=m; i++){
                        for(let j=1; j<=i;j++)
                        document.write("*");
                    }
                    document.write("<br>");
                }
                
            }
        </script>
    </head>
    <body>
        <script>
            let n = prompt("정수 입력하세요","");
            printStar(n);
        </script>
    </body>
</html>